<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#181818">


    <TextView
        android:id="@+id/inputnumber"
        android:layout_width="600dp"
        android:layout_height="120dp"
        android:gravity="end"
        android:text=""
        android:textColor="@color/yellow"
        android:textSize="40sp">


    </TextView>

    <TextView
        android:id="@+id/result"
        android:layout_width="600dp"
        android:layout_height="80dp"
        android:layout_below="@+id/inputnumber"
        android:gravity="end"
        android:text=""
        android:textColor="@color/aqua"
        android:textSize="40sp">

    </TextView>


    <Button
        android:id="@+id/buttonClear"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_below="@+id/result"
        android:background="@drawable/button"
        android:text="AC"
        android:textColor="@color/neongreen"
        android:textSize="25sp">

    </Button>

    <Button
        android:id="@+id/buttonBackspace"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_below="@+id/result"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/buttonClear"
        android:background="@drawable/button"
        android:drawableTop="@drawable/ic_baseline_backspace_24"
        android:drawableTint="@color/orange"
        android:paddingTop="40dp"
        android:textSize="40sp">

    </Button>

    <Button
        android:id="@+id/buttonPercent"
        android:layout_width="105dp"
        android:layout_height="110dp"
        android:layout_below="@+id/result"
        android:layout_toRightOf="@+id/buttonBackspace"
        android:background="@drawable/button"
        android:text="00"
        android:textColor="@color/teal_200"
        android:textSize="30sp">

    </Button>

    <Button
        android:id="@+id/buttonDivide"
        android:layout_width="105dp"
        android:layout_height="110dp"
        android:layout_below="@+id/result"
        android:layout_toRightOf="@+id/buttonPercent"
        android:background="@drawable/button"
        android:text="/"
        android:textColor="@color/neongreen"
        android:textSize="30sp">

    </Button>


    <Button
        android:id="@+id/button9"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_below="@+id/buttonBackspace"
        android:background="@drawable/button"
        android:text="9"
        android:textColor="@color/white"
        android:textSize="25sp">

    </Button>

    <Button
        android:id="@+id/button8"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_below="@+id/buttonBackspace"
        android:layout_toRightOf="@+id/button9"
        android:background="@drawable/button"
        android:text="8"
        android:textColor="@color/white"
        android:textSize="25sp">

    </Button>

    <Button
        android:id="@+id/button7"
        android:layout_width="105dp"
        android:layout_height="110dp"
        android:layout_below="@+id/buttonPercent"
        android:layout_toRightOf="@+id/button8"
        android:background="@drawable/button"
        android:text="7"
        android:textColor="@color/white"
        android:textSize="25sp">

    </Button>

    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="105dp"
        android:layout_height="110dp"
        android:layout_below="@+id/buttonDivide"
        android:layout_toRightOf="@+id/button7"
        android:background="@drawable/button"
        android:text="*"
        android:textColor="@color/orange"
        android:textSize="40sp">

    </Button>



    <Button
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:text="6"
        android:background="@drawable/button"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_below="@+id/button9"
        android:id="@+id/button6">

    </Button>

    <Button
        android:id="@+id/button5"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_below="@+id/button8"
        android:layout_toRightOf="@+id/button6"
        android:background="@drawable/button"
        android:text="5"
        android:textColor="@color/white"
        android:textSize="25sp">

    </Button>

    <Button
        android:id="@+id/button4"
        android:layout_width="105dp"
        android:layout_height="110dp"
        android:layout_below="@+id/button7"
        android:layout_toRightOf="@+id/button5"
        android:background="@drawable/button"
        android:text="4"
        android:textColor="@color/white"
        android:textSize="25sp">

    </Button>

    <Button
        android:id="@+id/buttonMinus"
        android:layout_width="105dp"
        android:layout_height="110dp"
        android:layout_below="@+id/buttonMultiply"
        android:layout_toRightOf="@+id/button4"
        android:background="@drawable/button"
        android:text="-"
        android:textColor="@color/teal_200"
        android:textSize="40sp">

    </Button>


    <Button
        android:id="@+id/button3"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_below="@+id/button6"
        android:text="3"
        android:background="@drawable/button"
        android:textColor="@color/white"
        android:textSize="25sp">

    </Button>

    <Button
        android:id="@+id/button2"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_below="@+id/button5"
        android:layout_toRightOf="@+id/button3"
        android:background="@drawable/button"
        android:text="2"
        android:textColor="@color/white"
        android:textSize="25sp">

    </Button>

    <Button
        android:id="@+id/button1"
        android:layout_width="105dp"
        android:layout_height="110dp"
        android:layout_below="@+id/button4"
        android:layout_toRightOf="@+id/button2"
        android:background="@drawable/button"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="25sp">

    </Button>

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="105dp"
        android:layout_height="110dp"
        android:layout_below="@+id/buttonMinus"
        android:layout_toRightOf="@+id/button1"
        android:background="@drawable/button"
        android:text="+"
        android:textColor="@color/orange"
        android:textSize="40sp">

    </Button>


    <Button
        android:id="@+id/button0"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_below="@+id/button3"
        android:background="@drawable/button"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="25sp">

    </Button>

    <Button
        android:id="@+id/buttonDot"
        android:layout_width="110dp"
        android:layout_height="150sp"
        android:layout_below="@+id/button2"
        android:layout_toRightOf="@+id/button0"
        android:background="@drawable/button"
        android:text="."
        android:textColor="@color/teal_200"
        android:textSize="50sp">

    </Button>

    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="210dp"
        android:layout_height="150dp"
        android:layout_below="@+id/button1"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-2dp"
        android:layout_toRightOf="@+id/buttonDot"
        android:background="@drawable/button"
        android:text="="
        android:textColor="@color/neongreen"
        android:textSize="40sp">

    </Button>
</RelativeLayout>